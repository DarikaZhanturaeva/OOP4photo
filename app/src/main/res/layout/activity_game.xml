<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_one"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_image_corners"
            android:backgroundTint="@color/black"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image_two"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/back_image_corners"
            android:backgroundTint="@color/black"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_third"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_image_corners"
            android:backgroundTint="@color/black"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image_four"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/back_image_corners"
            android:backgroundTint="@color/black"
            android:scaleType="centerCrop" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_game"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/et_style"
            android:enabled="false"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/btn_game"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/letter1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Ш"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="И"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Ь"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter5"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="М"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Б"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/letter7"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Ь"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter8"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Р"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter9"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="А"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter10"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Я"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter11"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="С"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letter12"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:text="Н"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#053A64"
        android:paddingVertical="12dp"
        android:text="проверить"
        android:textSize="26sp"
        app:cornerRadius="20dp" />

</LinearLayout>